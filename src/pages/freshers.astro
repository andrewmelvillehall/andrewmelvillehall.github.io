---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import CallToAction from "../components/Sections/CallToAction.astro";
import Button from "../components/UI/Button.astro";
import Directions from "../components/Sections/Directions.astro";
import Tick from "../components/Icons/Tick.astro";
import Cross from "../components/Icons/Cross.astro";
import FAQ from "../components/Sections/FAQ.astro";
import Music from "../components/Icons/Music.astro";
import Community from "../components/Icons/Community.astro";
import Icecream from "../components/Icons/Icecream.astro";
---

<BaseLayout
  title="I'm New - Andrew Melville Hall"
  description="Everything you need to know about joining the Melville Community"
>
  <PageHeader
    title="I'm New Here"
    subtitle="Welcome! We're glad you're joining us."
    backgroundImage="/uploads/melville-community.webp"
  />

  <!-- What to Expect -->
  <section class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What to Expect</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Here's what you can expect when you arrive
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <Music />
          </div>
          <h3 class="text-xl font-bold mb-3">Events</h3>
          <p class="text-gray-700">
            Your hall committee will organise plenty of events during freshers
            week. See our
            <a href="/events" class="text-primary-600 hover:text-primary-700"
              >events page</a
            >
            for what's coming up.
          </p>
        </div>

        <div class="text-center p-6">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <Community />
          </div>
          <h3 class="text-xl font-bold mb-3">Community</h3>
          <p class="text-gray-700">
            We are a tight-knit community of around 250 students.
          </p>
        </div>

        <div class="text-center p-6">
          <div
            class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center"
          >
            <Icecream />
          </div>
          <h3 class="text-xl font-bold mb-3">Fun</h3>
          <p class="text-gray-700">
            No matter what you enjoy, we will try and make your time at Melville
            unforgettable. Whether you're here for a semester or your entire
            degree, you will be sure to remember us.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Meal Times -->
  <section class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Meal Times</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-3">Breakfast</h3>
          <div class="mb-4">
            <p class="text-2xl font-bold text-primary-600 mb-2">
              Every Day 08:00 - 09:30
            </p>
            <p class="text-gray-600">
              Cooked breakfast, cereals and fruit available
            </p>
          </div>
        </div>

        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-3">Lunch</h3>
          <div class="mb-4">
            <p class="text-2xl font-bold text-primary-600 mb-2">
              Every Day 12:00 - 13:30
            </p>
            <p class="text-gray-600">Menu changes on a 4 weekly cycle</p>
            <p class="italic text-gray-500 mt-2">
              Packed lunches are available
            </p>
          </div>
        </div>
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <h3 class="text-xl font-bold mb-3">Dinner</h3>
          <div class="mb-4">
            <p class="text-2xl font-bold text-primary-600 mb-2">
              Monday - Friday 17:30 - 19:00
            </p>
            <p class="text-gray-600">Menu changes on a 4 weekly cycle</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="kids" class="py-16 bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">
        <!-- What to bring -->
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">What to bring</h2>

          <ul class="space-y-4 mb-6">
            <li class="flex items-start">
              <Tick />
              <span class="text-gray-700"> Towels and bedding </span>
            </li>
          </ul>
        </div>

        <!-- What not to bring -->
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">What not to bring</h2>

          <ul class="space-y-4 mb-6">
            <li class="flex items-start">
              <Cross />
              <span class="text-gray-700">
                Electrical items with non-UK plugs
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <Directions />

  <FAQ
    questions={[
      {
        question: "Who is the best committee member?",
        answer:
          "Zoe the IT rep. You should give her free cake and biscuits for being such a good IT rep.",
      },
      {
        question: "Who is the worst committee member?",
        answer: "I couldn't possibly say ðŸ˜‰",
      },
      {
        question: "Who made this amazing website?",
        answer:
          "Tis me, Zoe :). I am the IT rep extraordinaire. I made it because I absolutely love Melville (and definitely not because I needed an excuse to procrastinate my actual CS coursework).",
      },
    ]}
  />

  <CallToAction
    title="Still got questions?"
    content="Contact your committee and we will try answer the best we can."
    backgroundImg="/uploads/melville-community-plant-pot.webp"
    ><Button href="/contact" variant="primary" size="lg">
      Contact Us
    </Button></CallToAction
  >
</BaseLayout>
