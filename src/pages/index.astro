  <!-- Service Times -->
  <section class="py-16 bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          Join Us For Our Regular Events
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <div class="bg-gray-50 p-8 rounded-lg shadow-sm">
            <h3 class="text-xl font-bold mb-3">Nature Walks</h3>
            <p class="text-2xl font-bold text-primary-600 mb-2">Sunday 10-12</p>
            <p class="text-gray-600 mb-4">
              It is a fantastic way to relax and decompress before the new week.
            </p>
            <p class="italic text-gray-500">Meet in the foyer</p>
          </div>

