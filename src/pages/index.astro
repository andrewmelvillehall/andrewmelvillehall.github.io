      <Button href="/about"> Learn More About Us </Button>
    </div>
  </PhotoTextCombo>
  <div class="my-10"></div>
  <!-- Events Section -->
  <EventList showAll={false} limit={3} />

  <MerchList showAll={false} limit={3} bgGray />

