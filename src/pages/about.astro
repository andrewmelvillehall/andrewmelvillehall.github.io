---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHeader from "../components/Sections/PageHeader.astro";
import StaffListSection from "../components/Sections/StaffListSection.astro";
import StaffList from "../components/Sections/StaffList.astro";
import PhotoTextCombo from "../components/Sections/PhotoTextCombo.astro";
import History from "../components/Sections/History.astro";
---

<BaseLayout
  title="About Us - Andrew Melville Hall"
  description="Learn about our halls's history and the people who make our community special."
>
  <PageHeader
    title="About Us"
    subtitle="What makes our hall so great"
    backgroundImage="/uploads/about-hero-bg.webp"
  />

  <!-- Mission & Vision -->
  <PhotoTextCombo
    image="/uploads/chalk-path.webp"
    imageAlt="Chalk drawings on the path leading to AMH"
    photoSide="left"
  >
    <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Community</h2>
    <p class="text-xl text-gray-700 mb-8">
      Our community is what makes Melville special. We are a small hall with
      only about 250 people so you will soon start seeing familiar faces.
    </p>
  </PhotoTextCombo>

  <!-- Leadership Team Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Meet Your Committee</h2>
        <p class="text-xl text-gray-700 mb-8">
          Your committee is here to organise social activities and makes sure
          the your opinions are heard by the residential management team.
          Whether is a free bar or a chill cafe, we aim to have something for
          everyone.
        </p>
      </div>
      <StaffList />
    </div>
  </section>

  <!-- Hall History -->
  <History
    items={[
      {
        year: 1964,
        title: "Construction Started",
        text: "Construction on AMH begins. Prefab concrete sections are manufactured in Dundee and transported to site.",
      },
      {
        year: 1967,
        title: "Construction complete",
        text: "Construction on our hall is complete.",
      },
      {
        year: 1993,
        title: "Recognition as a key Scottish Monument",
        text: "AMH is included in DoCoMoMo's 1993 list of Key Scottish Monuments",
      },
      {
        year: 2011,
        title: "Listed building status",
        text: "The hall receives category A listed building status",
      },
    ]}
  />
</BaseLayout>
