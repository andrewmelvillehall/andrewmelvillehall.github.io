---
export interface Props {
  items: {
    year: number;
    title: string;
    text: string;
  }[];
}

const { items } = Astro.props;
---

<section class="py-16">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Our History</h2>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="relative pl-8 sm:pl-16 py-6 group">
        {
          items.map((item) => (
            <div class="flex flex-col sm:flex-row items-start mb-1 gap-10">
              <time class="text-lg text-gray-500 uppercase">{item.year}</time>
              <div>
                <h3 class="text-xl font-bold text-gray-900">{item.title}</h3>
                <p class="text-gray-700">{item.text}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
