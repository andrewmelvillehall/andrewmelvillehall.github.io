---
import StaffListSection from "./StaffListSection.astro";
---

<!-- ================= STAFF GRID ================= -->
<section id="staff" class="py-5 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Exec Committee</h2>
    <StaffListSection filter={(val) => val.data.isExec} />
  </div>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">General Committee</h2>
    <StaffListSection filter={(val) => !val.data.isExec} />
  </div>
</section>
